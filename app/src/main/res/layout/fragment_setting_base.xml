<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="首列:"
            style="@style/selectTextStyle"/>

        <com.yh.filesmanage.widget.ChooseView
            android:id="@+id/setting_choose_first"
            android:layout_width="80dp"
            android:layout_height="40dp"
            app:chooseValue="1"
            app:chooseColor="@color/blue_bg"
            app:chooseSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="固定列:"
            style="@style/selectTextStyle"/>

        <com.yh.filesmanage.widget.ChooseView
            android:id="@+id/setting_choose_fixed"
            android:layout_width="80dp"
            android:layout_height="40dp"
            app:chooseValue="1"
            app:chooseColor="@color/blue_bg"
            app:chooseSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="末列:"
            style="@style/selectTextStyle"/>

        <com.yh.filesmanage.widget.ChooseView
            android:id="@+id/setting_choose_end"
            android:layout_width="80dp"
            android:layout_height="40dp"
            app:chooseValue="1"
            app:chooseColor="@color/blue_bg"
            app:chooseSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="区号:"
            style="@style/selectTextStyle"/>

        <com.yh.filesmanage.widget.ChooseView
            android:id="@+id/setting_choose_area"
            android:layout_width="80dp"
            android:layout_height="40dp"
            app:chooseValue="1"
            app:chooseColor="@color/blue_bg"
            app:chooseSize="20sp"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="串口:"
        style="@style/selectTextStyle"/>

        <com.yh.filesmanage.widget.ChooseView
            android:id="@+id/setting_choose_seriaport"
            android:layout_width="150dp"
            android:layout_height="40dp"
            app:chooseValue="1"
            app:chooseColor="@color/blue_bg"
            app:chooseSize="20sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:text="设置"
            style="@style/selectTextStyle"
            android:background="@drawable/bg_main_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="波特率:"
            style="@style/selectTextStyle"/>

        <com.yh.filesmanage.widget.ChooseView
            android:id="@+id/setting_choose_bt"
            android:layout_width="150dp"
            android:layout_height="40dp"
            app:chooseValue="1"
            app:chooseColor="@color/blue_bg"
            app:chooseSize="20sp"/>
    </LinearLayout>
</LinearLayout>