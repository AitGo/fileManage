<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/selectTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/select_way" />

        <com.yh.filesmanage.widget.ChooseView
            android:id="@+id/ll_select_choose_way"
            android:layout_width="150dp"
            android:layout_height="40dp"
            app:chooseValue="架位条码"
            app:chooseColor="@color/blue_bg"
            app:chooseSize="18sp"/>

        <TextView
            style="@style/selectTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/select_key" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:textSize="15sp"
            android:background="@drawable/bg_edittext" />

        <Button
            style="@style/selectTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="60dp"
            android:text="@string/select_select"
            android:background="@drawable/bg_btn_select"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <com.yh.filesmanage.widget.ChooseView
            android:id="@+id/rl_select_choose_area"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            app:chooseValue="01"
            app:chooseColor="@color/blue_bg"
            app:chooseSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="区"
            style="@style/selectTextStyle"/>

        <com.yh.filesmanage.widget.ChooseView
            android:id="@+id/rl_select_choose_col"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            app:chooseValue="01"
            app:chooseColor="@color/blue_bg"
            app:chooseSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="列"
            style="@style/selectTextStyle"/>

        <com.yh.filesmanage.widget.ChooseView
            android:id="@+id/rl_select_choose_face"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            app:chooseValue="A"
            app:chooseColor="@color/blue_bg"
            app:chooseSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="面"
            style="@style/selectTextStyle"/>

        <com.yh.filesmanage.widget.ChooseView
            android:id="@+id/rl_select_choose_way"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            app:chooseValue="01"
            app:chooseColor="@color/blue_bg"
            app:chooseSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="节"
            style="@style/selectTextStyle"/>

        <com.yh.filesmanage.widget.ChooseView
            android:id="@+id/rl_select_choose_layer"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            app:chooseValue="01"
            app:chooseColor="@color/blue_bg"
            app:chooseSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="层"
            style="@style/selectTextStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/bg_select_list">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_light">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="序号"
                android:textColor="@color/black"
                style="@style/selectTextStyle"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="条码"
                android:textColor="@color/black"
                style="@style/selectTextStyle"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="题名"
                android:textColor="@color/black"
                style="@style/selectTextStyle"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="架位"
                android:textColor="@color/black"
                style="@style/selectTextStyle"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="状态"
                android:textColor="@color/black"
                style="@style/selectTextStyle"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>